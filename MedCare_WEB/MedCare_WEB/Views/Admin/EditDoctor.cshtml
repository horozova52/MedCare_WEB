
@{
     ViewBag.Title = "EditDoctor";
     Layout = "~/Views/Shared/_Layout.cshtml";
     var doctorsList = ViewBag.doctorsList;
}
@model MedCare_WEB.Models.EditDoctor

<section class="mt-5 ftco-section ftco-no-pt ftco-no-pb ftco-services-2 bg-light">
     <div class="container">
          <div class="row d-flex">
               <div class="d-flex col-lg-12">
                    <div class="appointment-wrap bg-white p-md-5">
                         @Html.ValidationSummary(true)
                         @using (Html.BeginForm("EditDoctor", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                         {
                              @Html.AntiForgeryToken()
                              <form action="#" class="appointment-form ftco-animate">
                                   <div class="row d-flex align-items-center">
                                        <div class="form-group col-lg-12">
                                             @Html.TextBoxFor(m => m.Username, new
                                        {
                                             type = "text",
                                             @class = "form-control",
                                             placeholder = "Username",
                                             required = true,
                                        })
                                        </div>
                                        <div class="form-group col-lg-12">
                                             @Html.TextBoxFor(m => m.Email, new
                                        {
                                             type = "email",
                                             @class = "form-control",
                                             placeholder = "Email",
                                             required = true,
                                             @readonly = "readonly"
                                        })
                                        </div>
                                        <div class="form-group  col-lg-12">
                                             @Html.TextBoxFor(m => m.Phone, new
                                        {
                                             type = "number",
                                             @class = "form-control",
                                             placeholder = "Phone",
                                             required = true,
                                        })
                                        </div>
                                        <div class="form-group col-lg-12">
                                             @Html.DropDownListFor(m => m.Type, new SelectList(ViewBag.types as System.Collections.IEnumerable, "Text"), "Select a type", new
                                        {
                                             @class = "form-control",
                                             required = "required",
                                        })
                                        </div>
                                        <div class="form-group col-lg-12">
                                             @Html.TextBoxFor(m => m.Description, new
                                        {
                                             type = "text",
                                             @class = "form-control",
                                             placeholder = "Description",
                                             required = true,
                                        })
                                        </div>
                                        <div class="col-lg-12">
                                             <input type="file" id="imageFile" required name="imageFile" accept="image/png" class="form-control" />
                                        </div>
                                        <button class="btn btn-primary  col-lg-12" href="#" type="submit">Edit Doctor</button>
                                   </div>
                              </form>
                         }
                    </div>
               </div>
          </div>
     </div>
</section>