
@{
     ViewBag.Title = "Appointment";
     Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MedCare_WEB.Models.AddAppointment

<section class="mt-5 ftco-section ftco-no-pt ftco-no-pb ftco-services-2 bg-light">
     <div class="container">
          <div class="row d-flex">
               <div class="col-md-7 py-5">
                    <div class="py-lg-5">
                         <div class="row justify-content-center pb-5">
                              <div class="col-md-12 heading-section ftco-animate">
                                   <h2 class="mb-3">Our Services</h2>
                              </div>
                         </div>
                         <div class="row">
                              <div class="col-md-6 d-flex align-self-stretch ftco-animate">
                                   <div class="media block-6 services d-flex">
                                        <div class="media-body pl-md-4">
                                             <h3 class="heading mb-3">Emergency Services</h3>
                                             <p>A small river named Duden flows by their place and supplies it with the necessary regelialia.</p>
                                        </div>
                                   </div>
                              </div>
                              <div class="col-md-6 d-flex align-self-stretch ftco-animate">
                                   <div class="media block-6 services d-flex">
                                        <div class="media-body pl-md-4">
                                             <h3 class="heading mb-3">Qualified Doctors</h3>
                                             <p>A small river named Duden flows by their place and supplies it with the necessary regelialia.</p>
                                        </div>
                                   </div>
                              </div>
                              <div class="col-md-6 d-flex align-self-stretch ftco-animate">
                                   <div class="media block-6 services d-flex">
                                        <div class="media-body pl-md-4">
                                             <h3 class="heading mb-3">Outdoors Checkup</h3>
                                             <p>A small river named Duden flows by their place and supplies it with the necessary regelialia.</p>
                                        </div>
                                   </div>
                              </div>
                              <div class="col-md-6 d-flex align-self-stretch ftco-animate">
                                   <div class="media block-6 services d-flex">
                                        <div class="media-body pl-md-4">
                                             <h3 class="heading mb-3">24 Hours Service</h3>
                                             <p>A small river named Duden flows by their place and supplies it with the necessary regelialia.</p>
                                        </div>
                                   </div>
                              </div>
                         </div>
                    </div>
               </div>
               <div class="col-md-5 d-flex">
                    <div class="appointment-wrap bg-white p-4 p-md-5 d-flex align-items-center">
                         @Html.ValidationSummary(true)
                         @using (Html.BeginForm("Appointment", "Home", FormMethod.Post))
                         {
                              @Html.AntiForgeryToken()
                         <form action="#" class="appointment-form ftco-animate">
                              <div class="form-group">
                                   @Html.TextBoxFor(m => m.FirstName, new
                              {
                                   type = "text",
                                   @class = "form-control",
                                   placeholder = "First Name",
                                   required = true,
                              })
                              </div>
                              <div class="form-group">
                                   @Html.TextBoxFor(m => m.LastName, new
                              {
                                   type = "text",
                                   @class = "form-control",
                                   placeholder = "Last Name",
                                   required = true,
                              })
                              </div>
                              <div class="form-group">
                                   @Html.DropDownListFor(m => m.Doctor, new SelectList(ViewBag.doctors as System.Collections.IEnumerable, "Text"), "Select a doctor", new
                              {
                                      @class = "form-control",
                                      required = "required",
                              })
                              </div>
                              <div class="form-group">
                                   @Html.TextBoxFor(m => m.Phone, new
                              {
                                   type = "number",
                                   @class = "form-control",
                                   placeholder = "Phone",
                                   required = true,
                              })
                              </div>
                              <div class="form-group">
                                   @Html.TextBoxFor(m => m.Date, new
                              {
                                   type = "date",
                                   @class = "form-control",
                                   placeholder = "End Date",
                                   required = true,
                              })
                              </div>
                              <div class="form-group">
                                   @Html.TextBoxFor(m => m.Time, new
                              {
                                   type = "time",
                                   @class = "form-control",
                                   placeholder = "Start Hour",
                                   required = true,
                              })
                              </div>
                              <div class="form-group">
                                   @Html.TextBoxFor(m => m.Message, new
                              {
                                   type = "text",
                                   @class = "form-control",
                                   placeholder = "Message",
                                   required = true,
                              })
                              </div>
                              <button class="btn btn-primary" href="#" type="submit">Submit Appointment</button>
                         </form>
                         }

                    </div>
               </div>
          </div>
     </div>
</section>
